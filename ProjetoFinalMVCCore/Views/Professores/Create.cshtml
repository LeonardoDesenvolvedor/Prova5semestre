@model ProjetoFinalMVCCore.Models.Professor

@{
    ViewData["Title"] = "Adicionar Professor";
}

<h1>Adicionar</h1>

<h4>Adicionar Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" type="text" class="form-control" placeholder="Nome do professor" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="formacao" class="control-label"></label>
                <input asp-for="formacao" type="text" class="form-control" placeholder="Formação Academica" />
                <span asp-validation-for="formacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" type="tel" class="form-control" placeholder="Documentação"/>
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" type="email" class="form-control" placeholder="exemplo@dominio.com" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary"  />
                <input class="btn btn-outline-danger" type="reset" value="Limpar campos">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
